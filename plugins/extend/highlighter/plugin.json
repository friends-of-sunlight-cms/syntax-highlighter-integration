{
    "$schema": "../../../system/schema/extend.json",
    "name": "Syntax Highlighter",
    "description": "Syntax highlighting for the Web (https://highlightjs.org/)",
    "authors": [
        {"name": "Friends of Sunlight CMS", "url": "https://github.com/friends-of-sunlight-cms/"}
    ],
    "version": "1.0.2",
    "environment": {
        "system": "^8.0"
    },
    "config_defaults": {
        "style": "default",
        "in_section": false,
        "in_category": false,
        "in_book": false,
        "in_group": false,
        "in_forum": true,
        "in_plugin": false,
        "in_module": false
    },
    "actions": {
        "config": "ConfigAction"
    },
    "langs": {
        "highlighter": "lang"
    },
    "events.web": [
        {"event": "tpl.head", "script": "event/head_assets.php"}
    ]
}
